#shopify-section-offers-section_1{
  .special-offer-container{
    margin-bottom: 50px;
    a{
      width: calc((100vw - 90px)/2);
      height:40vh;
      display: block;
      float: left;
      overflow: hidden;
      margin-left: 30px;

      //margin-bottom: 30px;
      .spesial-offer{
        width: 100%;
        min-height: 40vh;
        transition: all 0.5s ease-in-out;
        //background-size: 170%;
        background-position: bottom;
        background-repeat: no-repeat;
        background-color: transparent;
        position: relative;
        &:before{
          display: none;
        }
        &:hover {
          transition: all 0.5s ease-in-out;
          min-height: 60vh !important;
          //width: 120%;
          //background-size: 200%;
          //height: 60vh !important;
          //background-size: 200%;
        }

        &.spesial-offer--one{
          h3 {
            background-color: rgba(64,90,110, 0.5);
          }
        }
        &.spesial-offer--two{
          float: right;
          h3 {
            background-color: rgba(216, 35, 127,1)
          }
          .spesial-offer__info:before{
            margin-right: -30px;
          }
        }
        .heading--page{
          color: white;
          font-weight: 600;
          top:0;
          width:100%;
          position: absolute;
        }
      }
    }
  }
}
