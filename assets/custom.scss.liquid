#shopify-section-feature-collections_1{
  .featured-collections {
    margin-bottom: 0;
    .wrapper {
      max-width: 80%;
      //border: solid 1px;
      .grid {
        .grid__item {
          .featured-collections__list {

            @media (max-width: 1537px) and (min-width: 770px){
              .featured-collections__item{
                width: 48% !important;
              }
            }
            @media (max-width: 769px){
              .featured-collections__item{
                width: 96% !important;
              }
            }
            .featured-collections__item {
              //width: 25%;
                height: 360px;
                width: 24%;
                position: relative;
                float: left;
                overflow: hidden;
              .img-holder {
                background: transparent;
                overflow: hidden;
                img {
                  width: 100%;
                  max-width: 100%;

                  /*-moz-transition: all 3s;
                  -webkit-transition: all 3s;
                  transition: all 3s;*/
                  &:hover {
                    position: absolute;
                    transition: all 3s;
                    //transform: scale(2);
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

