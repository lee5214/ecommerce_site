#shopify-section-slideshow{
  .slides{
    .slide{
      height: $index_slider_height;
      margin-bottom: 15px;
    }
    .slide--1{
      .slide__info-wrapper{
        .slide__info-part {
          background: gray;
        }
      }
    }
    .slide--2{
      .slide__info-wrapper{
        .slide__info-part {
          background: linear-gradient(to right, transparent, pink);
        }
      }
    }
    .slide--3{
      .slide__info-wrapper{
        .slide__info-part {
          background: #f3b562;
        }
      }
    }
  }
}

